<div class="wrapper bg-light">

    <div class="jumbotron text-center bg-dark text-light">
        <h1 class="display-4">Mongo Scraper: Houseplant Edition</h1>
        <hr class="my-4">
        <p class="lead ">This app scrapes articles from Better Homes &amp; Gardens</p>
        <p class="lead">
            <a class="btn btn-outline-success btn-lg" href="/" role="button">Home</a>
        </p>
    </div>

    <div class="row mx-auto">

        {{#each articles}}
        {{#if saved}}

        <!--Article Card-->
        <div class="article col-lg-3 col-md-4 col-sm-6 mb-4">
            <div class="card border border-success">
                <img class="card-img-top" src={{imgURL}} alt={{imgAltText}}>
                <div class="card-body">
                    <h4 class="card-title text-center">
                        <a href={{articleURL}} target="_blank">{{title}}</a>
                    </h4>
                    <div class="btn-group btn-block ">
                        <a id="{{_id}}" class="add-note text-white btn btn-success" data-toggle="modal"
                            data-target={{hash articleID}}>Add Note</a>
                        <a id="{{_id}}" class="remove-article btn btn-outline-success">Remove Article</a>
                    </div>
                </div>
            </div>
        </div>
        <!--Modal-->
        <div class="modal fade" id={{articleID}} tabindex="-1" role="dialog"
            aria-labelledby="exampleModalScrollableTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-scrollable" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalScrollableTitle">{{title}}</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form>
                            <div class="form-group">
                                <label for="message-text" class="col-form-label">Note:</label>
                                <textarea class="form-control" id="message-text"></textarea>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Save changes</button>
                    </div>
                </div>
            </div>
        </div>




        {{/if}}
        {{/each}}

    </div>

    <footer class="footer">
        <div class="container">
            <p>Better Homes &amp; Gardens Mongo Scraper</p>
        </div>
    </footer>

</div>